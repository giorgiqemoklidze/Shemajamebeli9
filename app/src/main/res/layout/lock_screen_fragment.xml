<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LockScreenFragment"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/security_sc"
        android:layout_width="157dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="0sp"
        android:gravity="center_horizontal"
        android:text="Security Screen"
        />




    <TextView
        android:id="@+id/changedText"
        android:layout_width="157dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:lineSpacingExtra="0sp"
        android:gravity="center_horizontal"
        android:text="change text"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp">

        <ImageView
            android:id="@+id/firstrDot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_dot"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/green"/>

        <ImageView
            android:id="@+id/secondDot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_dot"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/black"/>

        <ImageView
            android:id="@+id/sirdDot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_dot"
            android:backgroundTint="@color/black"
            />
        
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/numbersRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</androidx.appcompat.widget.LinearLayoutCompat>